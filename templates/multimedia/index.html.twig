<div id="Carousel" class="carousel slide carousel-fade" data-mdb-ride="carousel">

  <!-- Inner -->
  <div class="carousel-inner">

    <!-- Single item -->
    {% for video in videos %}
    <div class="carousel-item">
      <video class="img-fluid" autoplay loop muted>
