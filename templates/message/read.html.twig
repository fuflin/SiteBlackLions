{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}

<section class="container">
    <div class="row">
        <div class="col-12">
            <h2>Messagerie</h2>
            <h4>{{message.title}}</h4>
            <p>Message de <strong>{{message.sender.email}}</strong></p>
            <p>{{message.createdAt|date('d/m/Y')}}</p>
            <div>{{message.text}}</div>
            <a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button"
                aria-controls="offcanvasExample">
                Voir mes dossiers
            </a>
            <a href="{{ path('receive')}}" class="btn btn-primary">Retour à la boîte de reception</a>

        </div>
    </div>
</section>
<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample"
                aria-labelledby="offcanvasExampleLabel">
                <div class="offcanvas-header">
                    <h3 class="offcanvas-title" id="offcanvasExampleLabel">Mes dossiers</h3>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <div class="list-group">
                        <a href="{{ path('app_message')}}" class="list-group-item list-group-item-action">Acceuil</a>
                    </div>
                    <div class="list-group">
                        <a href="{{ path('receive')}}" class="list-group-item list-group-item-action">Boîte de reception</a>
                    </div>
                    <div class="list-group">
                        <a href="{{ path('sent')}}" class="list-group-item list-group-item-action">Eléments envoyés</a>
                    </div>
                </div>
            </div>

{% endblock %}