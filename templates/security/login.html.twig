{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form class="login" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}

    <h2>Connexion</h2>
    <figure>
        <img src="{{asset('/img/airsoft logo CMJN-01.jpg')}}" alt="logo association">
    </figure>

    <div class="long">
        <div class="form">
            <div>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Entrez votre Email" required autofocus>
            </div>
            <div>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Entrez votre adresse mot de passe" required>
            </div>
            <div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>
            <div class="button">
                <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>
            </div>
            <div class="button">
                <a class="btn btn-lg btn-secondary" href="{{path('app_register')}}"><strong>S'inscrire</strong></a>
            </div>
            <div class="button">
                <a href="{{path('app_forgot_password_request')}}"><strong>Mot de passe oublié</strong></a>
            </div>
        </div>
    </div>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}

</form>
{% endblock %}
