{% extends "base.html.twig" %}

{% block title %}Liste des Users{% endblock %}

{% block body %}

    <div class="container" style="margin-top: 80px;">
        <div class="row">
            {% include "partials/adminNav.html.twig" %}
            <div class="col-9 border border-light bg-light p-3">
                <h1 style="text-align: center;">Liste des Users</h1><br>
                <table class="table table-dark table-striped-columns" style="border-radius: 15px;">
                    <thead>
                        <tr>
                            <th>liste des Users</th>
                            <th>Adresse mail</th>
                            <th>Date d'inscription</th>
                            <th>Roles</th>
                            <th>Pseudo Discord</th>
                            <th>Vérifié</th>
                            <th>Bloqué</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{user.nickname}}</td>
                                <td>{{user.email}}</td>
                                <td>{{user.DateCreate | date('d/m/Y')}}</td>
                                <td>
                                {% for role in user.roles %}
                                    {% if role == "ROLE_ADMIN" %}
                                        {% set name = "Administrateur" %}
                                        {% set color = "danger" %}
                                    {% else %}
                                        {% set name = "Membre" %}
                                        {% set color = "success" %}
                                    {% endif %}
                                    <span class="badge bg-{{color}}">{{name}}</span>
                                {% endfor %}</td>
                                <td>{{user.DiscordNickname}}</td>
                                <td>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" role="switch" id="switch{{ user.id }}" {{ user.isVerified ? "checked" : ""}} disabled>
                                        <label class="form-check-label" for="switch{{ user.id }}"></label>
                                    </div>
                                </td>
                                <td>
                                    {# {{ form_start(form) }}
                                        {{ form_row(form.isBanned) }}
                                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                                    {{ form_end(form) }} #}

                                    <form action="{{path('admin_users_ban')}}" method="post">
                                        <input class="form-check-input" type="checkbox" name="_banned" role="switch" id="switch{{ user.id }}" {{ user.isBanned ? "checked" : ""}}>
                                        {# <button type="submit" class="btn btn-primary">Enregistrer</button> #}
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}