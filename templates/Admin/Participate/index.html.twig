{% extends "base.html.twig" %}

{% block title %}Liste des Participations{% endblock %}

{% block body %}

    <div class="container" style="margin-top: 80px;">
        <div class="row">
            {% include "partials/adminNav.html.twig" %}
            <div class="col-9 border border-light bg-light p-3">
                <h3 class="align-middle">Liste des Participations</h3><br>

                <h3 class="align-middle"><u>Evénement:</u> <strong>{{event.name}}</strong><br><br>Nombre de Participants: {{event.participates|length}}/{{event.NbMaxPers}}</h3><br>

                <table class="table table-dark table-striped-columns">
                    <thead>
                        <tr>
                            <th>Liste des users</th>
                            <th>Mail des users</th>
                            <th>Date d'inscription à l'event</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for participate in participates %}
                            <tr>
                                <td>{{ participate.user.nickname }}</td>
                                <td>{{ participate.user.email }}</td>
                                <td>{{participate.DateRegis | date('d/m/Y')}}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}