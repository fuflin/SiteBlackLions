{% extends "base.html.twig" %}

{% block title %}Liste des Events{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            {% include "partials/adminNav.html.twig" %}
            <div class="col-9 border border-light bg-light p-3">
                <h1>Liste des Events</h1>
                <table class="table table-dark table-striped-columns">
                    <thead>
                        <tr>
                            <th>liste des événement</th>
                            <th>Description</th>
                            <th>Date de jeu</th>
                            <th>Nombre de participants</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for event in events %}
                            <tr>
                                <td>{{ event.name }}</td>
                                <td>{{ event.description }}</td>
                                <td>{{event.DateCreate | date('d/m/Y')}}</td>
                                <td>{{event.participates|length}}/{{event.NbMaxPers}}</td>
                                <td><a href="{{ path('edit_event', {'id': event.id})}}" class="btn btn-secondary">Modifier</a></td>
                                <td><a href="{{ path('delete_event', {'id': event.id})}}" class="btn btn-danger">Supprimer</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <h4 style="text-align: center;"><a href="{{ path('add_event')}}" class="btn btn-primary" style="width: 30%">Ajouter un Evènement</a></h4>
            </div>
        </div>

    </div>
{% endblock %}