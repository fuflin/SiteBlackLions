{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Inscription</h1>


    <div class="regis">
        {{ form_start(registrationForm, {'attr': {'style': 'width: 65%'} }) }}

            <div class="form">
                <div>
                    {{ form_row(registrationForm.nickname) }}
                </div>
                <div>
                    {{ form_row(registrationForm.email) }}
                </div>
                <div>
                    {{ form_widget(registrationForm.plainPassword, {label: 'Password'}) }}
                </div>
                <div>
                    {{ form_row(registrationForm.discord_nickname) }}
                </div>
                {# <div>
                    {{ form_row(registrationForm.agreeTerms) }}
                </div> #}
                <div class="button">
                    {{form_row(registrationForm.submit, {'label':'Soumettre'})}}
                </div>
            </div>

        {{ form_end(registrationForm) }}
    </div>

{% endblock %}
