
{% extends 'base.html.twig' %}

{% block title %}Détail Event{% endblock %}

{% block body %}

<h1 style="text-align: center;">Détail de l'événement</h1><br><br>

<h4 style="text-align: center;"></h4>

<div style="display: flex; justify-content: center; border-radius: 15px;">
    <figure style="width: 40%;">
        <img src="{{asset('uploads/images/' ~ event.poster)}}" style="border-radius: 15px; width: 100%;">
    </figure>

</div><br><br>

<div style="display: flex; justify-content: center;">
    <h4 style="text-align: center; background-color: aliceblue; border-radius: 10px; width: 22%; padding: 10px;">Evénement:<br> <strong>{{event.name}}</strong></h4>
</div><br>
<div style="display: flex; justify-content: center;">
    <h4 style="text-align: center; background-color: aliceblue; border-radius: 10px; width: 22%; padding: 10px;">Date de l'événement:<br> <strong>{{event.DateCreate | date('d/m/Y')}}</strong></h4>
</div><br>
<div style="display: flex; justify-content: center;">
    <h4 style="text-align: center; background-color: aliceblue; border-radius: 10px; width: 22%; padding: 10px;">Nombre de participants:<br> <strong>{{event.participates|length}}/{{event.NbMaxPers}}pers.</strong></h4>
</div><br><br>


<div style="display: flex; justify-content: center;">
    <p style="text-align: center; background-color: aliceblue; border-radius: 10px; font-size: 1.5em;  width: 40%; padding: 10px;">{{event.description}}</p>
</div>

{% include "event/redirect.html.twig"%}


{% endblock %}