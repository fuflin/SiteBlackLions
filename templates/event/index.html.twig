{% extends 'base.html.twig' %}

{% block title %}Liste Events{% endblock %}

{% block body %}

<h1 style="text-align: center;">Listes des events</h1><br><br>

{% if is_granted('ROLE_ADMIN') %}

<h4 style="text-align: center;"><a href="{{ path('admin_events_add_event')}}" class="btn btn-primary" style="width: 30%">Ajouter un Evènement</a></h4>

{% endif %}

<div class="row" style="width: 90%; margin: auto;">

  {% for event in events %}
    <div class="col-sm-6" style=" width: 32%; margin: 50px 10px;">

      <div class="card" style="width: 25rem; background-color: black; border: solid rgb(51, 49, 49) 2px; padding: 10px;">

          <img src="{{asset('uploads/images/' ~ event.poster)}}" class="card-img-top" style="height:300px; border-radius: 15px;">

            <div class="card-body">
                <h5 class="card-title" style="text-align: center; color: white;">Evénement:<br><strong style="color: red;">{{event.name}}</strong></h5><br>
                <h5 class="card-title" style="text-align: center; color: white;">Date de l'événement:<br><strong style="color: darkgreen;">{{event.DateCreate | date('d/m/Y')}}</strong></h5><br>
                <h6 class="card-text" style="text-align: center; color: white;">Nombre de participants:<br><strong style="color: rgb(0, 153, 255);">{{event.participates|length}}/{{event.NbMaxPers}} pers.</strong></h6><br>
                <a href="{{ path('show_event', {'id': event.id})}}" class="btn btn-light" style="display: flex; justify-content: center;">Présentation</a>
            </div>

          {% include "event/redirect.html.twig"%}

          {% if is_granted('ROLE_ADMIN') %}

            <div class="option" style="display: flex; justify-content: center;">
              <a href="{{ path('admin_events_edit_event', {'id': event.id})}}" class="btn btn-primary" style="width: 42%; margin: 10px;">Modifier</a>
              <a href="{{ path('admin_events_delete_event', {'id': event.id})}}" class="btn btn-danger" style="width: 42%; margin: 10px;">Supprimer</a>
            </div>
          {% endif %}
      </div>

    </div>
  {% endfor %}

</div><br>


{% endblock %}
